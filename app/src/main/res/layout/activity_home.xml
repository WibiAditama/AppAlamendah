<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".HomeActivity"
        android:background="@color/Backgorund1">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="414dp"
            android:layout_height="241dp"
            android:layout_marginTop="55dp"
            android:contentDescription="@string/desa_alam_endah"
            android:src="@drawable/ranca_upas_camp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="85dp"
            android:fontFamily="@font/syne_mono"
            android:text="@string/desa_alam_endah"
            android:textAlignment="center"
            android:textColor="@color/colorText2"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="158dp"
            android:layout_height="26dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/mau_wisata_apa"
            android:textColor="@color/colorText2"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/RancaBalitrip"
            android:layout_width="74dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0">
            
            <ImageView
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:src="@drawable/mountain"
                android:contentDescription="@string/rancabali_trip"
                android:layout_gravity="center"/>
            
            <TextView
                android:layout_width="55dp"
                android:layout_height="30dp"
                android:text="@string/rancabali_trip"
                android:textSize="12sp"
                android:textColor="@color/colorText2"
                android:layout_gravity="center"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Camping"
            android:layout_width="74dp"
            android:layout_height="70dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/RancaBalitrip"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0">
            
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/camping"
                android:contentDescription="@string/camping"
                android:layout_gravity="center"/>
            
            <TextView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:text="@string/camping"
                android:textSize="12sp"
                android:textColor="@color/colorText2"
                android:textAlignment="center"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LandRover"
            android:layout_width="74dp"
            android:layout_height="70dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/Camping"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0">
            
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/jeep"
                android:contentDescription="@string/land_rover"
                android:layout_gravity="center"/>
            
            <TextView
                android:layout_width="65dp"
                android:layout_height="20dp"
                android:text="@string/land_rover"
                android:textSize="12sp"
                android:textColor="@color/colorText2"
                android:textAlignment="center"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Paintball"
            android:layout_width="74dp"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RancaBalitrip"
            app:layout_constraintVertical_bias="0.0">
            
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/paintball"
                android:contentDescription="@string/paint_ball"
                android:layout_gravity="center"/>
            
            <TextView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:text="@string/paint_ball"
                android:textColor="@color/colorText2"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Outbound"
            android:layout_width="74dp"
            android:layout_height="70dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/Paintball"
            app:layout_constraintTop_toBottomOf="@+id/Camping"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/playground"
                android:contentDescription="@string/out_bond"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="55dp"
                android:layout_height="20dp"
                android:text="@string/out_bond"
                android:textSize="12sp"
                android:textColor="@color/colorText2"
                android:textAlignment="center"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/JelajahCurug"
            android:layout_width="74dp"
            android:layout_height="70dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/Outbound"
            app:layout_constraintTop_toBottomOf="@+id/LandRover"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/waterfall"
                android:contentDescription="@string/jelajah_curug"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="75dp"
                android:layout_height="26dp"
                android:text="@string/jelajah_curug"
                android:textSize="12sp"
                android:textColor="@color/colorText2"
                android:textAlignment="center"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="85dp"
            android:layout_height="29dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="@string/popular"
            android:textColor="@color/colorText2"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Paintball"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/CoffeeTrip"
            android:layout_width="350dp"
            android:layout_height="104dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_brown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:contentDescription="@string/coffe_trip"
                android:src="@drawable/coffe_trip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="110dp"
                android:layout_height="23dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/syne_mono"
                android:text="@string/coffe_trip"
                android:textColor="@color/colorText2"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="112dp"
                android:layout_height="15dp"
                android:text="@string/harga_coffe_trip"
                android:textAlignment="center"
                android:textColor="@color/colorText2"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="165dp"
                android:layout_height="30dp"
                android:text="@string/deskripsi_coffe_trip"
                android:textAlignment="center"
                android:textColor="@color/colorText3"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:layout_width="247dp"
                android:layout_height="20dp"
                android:text="@string/selengkapnya"
                android:textSize="12sp"
                android:textColor="@color/colorText2"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintVertical_bias="0.5"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Ngagoes"
            android:layout_width="350dp"
            android:layout_height="104dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_brown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CoffeeTrip"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="106dp"
                android:layout_height="89dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/ngagoes_ulin_kalembur"
                android:src="@drawable/ngagoes"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="228dp"
                android:layout_height="22dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/syne_mono"
                android:text="@string/ngagoes_ulin_kalembur"
                android:textAlignment="center"
                android:textColor="@color/colorText2"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="112dp"
                android:layout_height="15dp"
                android:text="@string/harga_ngagoes"
                android:textAlignment="center"
                android:textColor="@color/colorText2"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="240dp"
                android:layout_height="45dp"
                android:text="@string/deskripsi_ngagoes"
                android:textAlignment="center"
                android:textColor="@color/colorText3"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:layout_width="247dp"
                android:layout_height="15dp"
                android:text="@string/selengkapnya"
                android:textColor="@color/colorText2"
                android:textSize="12sp"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                app:layout_constraintVertical_bias="0.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/AlamendahTrip"
            android:layout_width="350dp"
            android:layout_height="104dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_brown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Ngagoes"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="106dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/alamendah_trip"
                android:src="@drawable/trip"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="178dp"
                android:layout_height="23dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/syne_mono"
                android:text="@string/alamendah_trip"
                android:textAlignment="center"
                android:textColor="@color/colorText2"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="112dp"
                android:layout_height="15dp"
                android:text="@string/harga_alamendah_trip"
                android:textAlignment="center"
                android:textColor="@color/colorText2"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="247dp"
                android:layout_height="45dp"
                android:text="@string/deskripsi_alamendah_trip"
                android:textAlignment="center"
                android:textColor="@color/colorText3"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:layout_width="247dp"
                android:layout_height="20dp"
                android:text="@string/selengkapnya"
                android:textSize="12sp"
                android:textColor="@color/colorText2"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/textView12"
                app:layout_constraintVertical_bias="0.0"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
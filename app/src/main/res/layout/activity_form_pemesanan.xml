            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView19"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:id="@+id/textView54"
            android:layout_width="110dp"
            android:layout_height="21dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/jumlah_tiket"
            android:textColor="@color/colorText3"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NoHandphonePemesan"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/ButtonMinus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@color/Backgorund1"
            android:contentDescription="@string/kurangi_tiket"
            android:src="@drawable/minus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView54"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/TotalTiketPesanan"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_regular"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/colorText3"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ButtonMinus"
            app:layout_constraintTop_toBottomOf="@+id/textView54"
            app:layout_constraintHorizontal_bias="0.0"/>

        <ImageButton
            android:id="@+id/ButtonTambah"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/Backgorund1"
            android:src="@drawable/plus"
            android:contentDescription="@string/tambah_tiket"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/TotalTiketPesanan"
            app:layout_constraintTop_toBottomOf="@+id/textView54"
            app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
